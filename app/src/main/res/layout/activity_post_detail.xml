<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraint_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".ui.activity.PostDetailActivity">
    <!-- 状态栏占位 -->
    <View
        android:id="@+id/status_bar_top"
        android:layout_width="0dp"
        android:layout_height="44dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/top_bar"
        style="@style/TopContentStyle"
        android:paddingLeft="0dp"
        android:paddingRight="20.56dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/status_bar_top">


        <!-- 返回按钮 -->
        <ImageView
            android:id="@+id/back_button"
            style="@style/BackButtonStyle"
            android:layout_marginStart="8dp"
            android:src="@drawable/ic_back" />
        <!-- 用户头像 -->
        <ImageView
            android:id="@+id/user_avatar"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginEnd="8dp"
            android:scaleType="centerCrop"
            android:background="@android:color/transparent" />
        <!-- 用户名 -->
        <TextView
            android:id="@+id/user_name"
            style="@style/UserContentNameStyle"
            android:text="用户" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/follow"
            style="@style/FollowStyle"
            android:text="关注"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:background="@drawable/follow_button_red_border" />

    </LinearLayout>
    <androidx.core.widget.NestedScrollView
        android:id="@+id/nestedscrollview_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        app:layout_constraintBottom_toTopOf="@id/bottom_interaction_bar"
        app:layout_constraintTop_toBottomOf="@+id/top_bar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- 图片展示ViewPager2 容器 -->
            <FrameLayout
                android:id="@+id/viewpager_container"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="16dp">

                <androidx.viewpager2.widget.ViewPager2
                    android:id="@+id/viewPager"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:transitionName="cover_image_transition" />

                <!-- 音量图标 - 悬浮在图片右下角 -->
                <ImageView
                    android:id="@+id/volume_icon"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_gravity="bottom|end"
                    android:layout_marginEnd="16dp"
                    android:layout_marginBottom="40dp"
                    android:src="@drawable/ic_speaker_background"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:clickable="true"
                    android:focusable="true"
                    android:contentDescription="音量" />

                <!-- 页面指示器 - 悬浮在图片底部上方 -->
                <com.google.android.material.tabs.TabLayout
                    android:id="@+id/tab_indicator"
                    android:layout_width="match_parent"
                    android:layout_height="6dp"
                    android:layout_gravity="bottom"
                    android:layout_marginBottom="12dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:visibility="gone"
                    android:background="@drawable/tab_indicator_background"
                    app:tabBackground="@drawable/tab_selector"
                    app:tabGravity="fill"
                    app:tabIndicatorHeight="0dp"
                    app:tabMode="fixed"
                    app:tabMinWidth="0dp"
                    app:tabMaxWidth="0dp"
                    app:tabRippleColor="@null" />

            </FrameLayout>

            <!-- 内容模块 -->
            <LinearLayout
                android:id="@+id/content_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#FFFFFF"
                android:layout_marginTop="24dp"
                android:layout_marginStart="0dp"
                android:layout_marginEnd="0dp"
                android:layout_marginBottom="0dp">

                <!-- 标题 -->
                <TextView
                    android:id="@+id/title_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="这是标题文本"
                    android:textSize="18sp"
                    android:textColor="#161823"
                    android:fontFamily="sans-serif-medium"
                    android:textStyle="bold"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="12dp" />

                <!-- 正文 -->

                <!-- 日期和时间 -->
                <TextView
                    android:id="@+id/content_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginBottom="12dp"
                    android:fontFamily="sans-serif"
                    android:lineSpacingExtra="2dp"
                    android:text="这是正文内容，可以显示较长的文本内容，支持多行显示。"
                    android:textColor="#161823"
                    android:textSize="16sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginBottom="16dp"
                    android:orientation="horizontal">

                    <!-- 日期 -->
                    <TextView
                        android:id="@+id/date_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="今天"
                        android:textSize="14sp"
                        android:textColor="#999999"
                        android:fontFamily="sans-serif" />

                    <!-- 时间 -->
                    <TextView
                        android:id="@+id/time_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="14:30"
                        android:textSize="14sp"
                        android:textColor="#999999"
                        android:fontFamily="sans-serif"
                        android:layout_marginStart="8dp" />

                </LinearLayout>

            </LinearLayout>

            <!-- 分隔线 -->
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#E5E5E5" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>


    <!-- 底部导航栏 -->
    <LinearLayout
        android:id="@+id/bottom_interaction_bar"
        style="@style/BottomNavContainerStyle"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_gravity="bottom"
        android:layout_marginTop="1dp"
        android:background="#FFFFFF"
        android:elevation="0dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingStart="16dp"
        android:paddingTop="4dp"
        android:paddingEnd="16dp"
        android:paddingBottom="4dp"
        app:layout_constraintTop_toBottomOf="@id/nestedscrollview_container"
        app:layout_constraintBottom_toTopOf="@id/home_indicator_container"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">
<!--        // 快捷评论框-->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="2"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingStart="16dp"
            android:paddingEnd="8dp">

            <EditText
                android:id="@+id/quick_comment_edit"
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_weight="1"
                android:background="@drawable/bg_comment_input"
                android:hint="说点什么..."
                android:textSize="14sp"
                android:textColor="#161823"
                android:textColorHint="#999999"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:maxLines="1"
                android:imeOptions="actionSend"
                android:inputType="text" />
        </LinearLayout>

        <!-- 点赞按钮 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:orientation ="vertical"
            android:gravity="center">
            <ImageView
                android:id="@+id/like_button"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:contentDescription="点赞"
                android:focusable="true"
                android:padding="0dp"
                android:src="@drawable/ic_like"
             />
            <TextView
                android:id="@+id/like_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxWidth="48dp"
                android:text="25"
                android:textSize="10sp"
                android:textColor="#161823"
                android:layout_marginTop="2dp"
                android:ellipsize="end"
                android:maxLines="1"/>
        </LinearLayout>

        <!-- 评论按钮 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:orientation ="vertical"
            android:gravity="center">

            <ImageView
                android:id="@+id/comment_button"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:contentDescription="评论"
                android:focusable="true"
                android:padding="0dp"
                android:src="@drawable/ic_comment"
                 />

            <TextView
                android:id="@+id/comment_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxWidth="48dp"
                android:text="25"
                android:textSize="10sp"
                android:textColor="#161823"
                android:layout_marginTop="2dp"
                android:ellipsize="end"
                android:maxLines="1"/>
        </LinearLayout>

        <!-- 收藏按钮 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:orientation ="vertical"
            android:gravity="center">
            <ImageView
                android:id="@+id/star_button"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:contentDescription="收藏"
                android:focusable="true"
                android:padding="0dp"
                android:src="@drawable/ic_star"
                />
            <TextView
                android:id="@+id/star_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxWidth="48dp"
                android:text="25"
                android:textSize="10sp"
                android:textColor="#161823"
                android:layout_marginTop="2dp"
                android:ellipsize="end"
                android:maxLines="1"/>
        </LinearLayout>

        <!-- 分享按钮 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:orientation ="vertical"
            android:gravity="center">
            <ImageView
                android:id="@+id/share_button"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:contentDescription="转发"
                android:focusable="true"
                android:padding="0dp"
                android:src="@drawable/ic_share" />
            <TextView
                android:id="@+id/share_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxWidth="48dp"
                android:text="25"
                android:textSize="10sp"
                android:textColor="#161823"
                android:layout_marginTop="2dp"
                android:ellipsize="end"
                android:maxLines="1"/>
        </LinearLayout>
    </LinearLayout>

    <!-- Home Indicator 容器 -->
    <LinearLayout
        android:id="@+id/home_indicator_container"
        android:layout_width="match_parent"
        android:layout_height="34dp"
        android:background="#FFFFFF"
        android:elevation="0dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
