<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_root"
    android:layout_width="189dp"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground"
    android:transitionName="card_transition"
    app:cardCornerRadius="4dp"
    app:cardElevation="0dp"
    app:cardBackgroundColor="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- 封面图片区域 -->
        <FrameLayout
            android:id="@+id/cover_container"
            android:layout_width="189dp"
            android:layout_height="252dp"
            android:background="#F0F0F0">

            <!-- 封面图 -->
            <ImageView
                android:id="@+id/cover_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:contentDescription="封面"
                android:adjustViewBounds="true"
                android:transitionName="cover_image_transition" />
        </FrameLayout>

        <!-- 内容信息区域 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp"
            android:background="#FFFFFF">

            <!-- 标题文本 -->
            <TextView
                android:id="@+id/video_title"
                style="@style/VideoTitleStyle"
                android:layout_width="173dp"
                android:layout_height="wrap_content" />

            <!-- 用户信息和点赞区域 -->
            <RelativeLayout
                android:layout_width="173dp"
                android:layout_height="20dp"
                android:layout_marginTop="6dp">

                <!-- 用户头像和名称 -->
                <LinearLayout
                    android:id="@+id/user_info_layout"
                    android:layout_width="match_parent"
                    android:layout_height="16dp"
                    android:layout_toStartOf="@id/like_layout"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginEnd="4dp">

                    <!-- 用户头像 -->
                    <ImageView
                        android:id="@+id/user_avatar"
                        style="@style/UserAvatarStyle"
                        android:layout_marginEnd="4dp" />

                    <!-- 用户名 -->
                    <TextView
                        android:id="@+id/user_name"
                        style="@style/UserNameStyle"
                        android:layout_width="match_parent" />

                </LinearLayout>

                <!-- 点赞 -->
                <LinearLayout
                    android:id="@+id/like_layout"
                    android:layout_width="50dp"
                    android:layout_height="17dp"
                    android:layout_alignParentEnd="true"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <!-- 点赞图标 -->
                    <ImageView
                        android:id="@+id/like_icon"
                        style="@style/LikeIconStyle"
                        android:layout_marginEnd="2dp" />

                    <!-- 点赞数量 -->
                    <TextView
                        android:id="@+id/like_count"
                        style="@style/LikeCountStyle" />

                </LinearLayout>

            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>